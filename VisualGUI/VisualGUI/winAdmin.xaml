<Window x:Name="winAdmin" x:Class="winAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualGUI"
        mc:Ignorable="d"
        Title="ADMINISTRADOR" Height="360.976" Width="522.764">
    <Grid Margin="0,0,2,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFAFEFF" Offset="0.152"/>
                <GradientStop Color="#FF86DCF0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="498" Margin="5,0,0,0" Background="#FFD6FFE1">
            <MenuItem Header="Productos" Height="29" Width="109" FontSize="18" Click="MenuItem_Click_1"/>
            <MenuItem Header="Vendedores" Width="125" FontSize="18"/>
            <MenuItem Header="Provincias" Width="128" FontSize="18"/>
            <MenuItem Header="Tipo de pago" Click="MenuItem_Click" Width="132" FontSize="18"/>
        </Menu>
        <DataGrid x:Name="dtgAdmin" ItemsSource="{Binding Path=Item}" HorizontalAlignment="Left" Height="276" Margin="10,44,0,0" VerticalAlignment="Top" Width="493" Background="#FFFFE3E3"/>
    </Grid>
</Window>
