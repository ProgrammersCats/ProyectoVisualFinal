        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Height="26" Margin="196,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <TextBox x:Name="txtApellido" HorizontalAlignment="Left" Height="26" Margin="196,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <Button x:Name="button" Content="Guardar" HorizontalAlignment="Left" Height="31" Margin="145,228,0,0" VerticalAlignment="Top" Width="94" FontSize="22"/>

    </Grid>
</Window>
