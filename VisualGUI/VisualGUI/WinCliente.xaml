        <Label x:Name="label" Content="Nombre" HorizontalAlignment="Left" Height="34" Margin="57,18,0,0" VerticalAlignment="Top" Width="102" FontSize="18" FontFamily="Segoe UI Semibold"/>
        <Label x:Name="label1" Content="Apellido" HorizontalAlignment="Left" Height="35" Margin="57,57,0,0" VerticalAlignment="Top" Width="121" FontSize="18" FontFamily="Segoe UI Semibold"/>
        <Label x:Name="label2" Content="RUC" HorizontalAlignment="Left" Height="36" Margin="57,97,0,0" VerticalAlignment="Top" Width="75" FontSize="18" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="26" Margin="196,26,-27,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <TextBox x:Name="txtRuc" HorizontalAlignment="Left" Height="26" Margin="196,100,-27,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
